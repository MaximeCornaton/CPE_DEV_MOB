<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="pokemonViewModel"
            type="fr.pokemongeo.gr1.PokemonViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Starter"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- First Image and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/p7" />

            <Button
                android:id="@+id/buttonPokemon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Carapuce" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Second Image and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/p4" />

            <Button
                android:id="@+id/buttonPokemon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select SalamÃ¨che" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Third Image and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/p1" />

            <Button
                android:id="@+id/buttonPokemon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Bulbizarre" />
        </LinearLayout>
    </LinearLayout>
</layout>
